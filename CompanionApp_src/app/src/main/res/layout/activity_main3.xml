<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/snareDrumImage"
        android:layout_width="290dp"
        android:layout_height="253dp"
        android:layout_marginTop="236dp"
        android:src="@drawable/snare6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/section"
        android:layout_width="290dp"
        android:layout_height="253dp"
        android:layout_marginTop="236dp"
        android:src="@drawable/greentri"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView 1 (Top Lug) -->

    <!-- TextView 2 (Top-Right Lug) -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg (Hz): "
        app:layout_constraintBottom_toTopOf="@+id/snareDrumImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg (Hz): "
        app:layout_constraintTop_toTopOf="@id/snareDrumImage"
        app:layout_constraintEnd_toEndOf="@id/snareDrumImage"
        app:layout_constraintHorizontal_bias="1.0" />

    <!-- TextView 3 (Bottom-Right Lug) -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg (Hz): "
        app:layout_constraintBottom_toBottomOf="@id/snareDrumImage"
        app:layout_constraintEnd_toEndOf="@id/snareDrumImage" />

    <!-- TextView 4 (Bottom Lug) -->

    <!-- TextView 5 (Bottom-Left Lug) -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg (Hz): "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snareDrumImage"
        app:layout_constraintVertical_bias="0.188" />

    <!-- TextView 6 (Top-Left Lug) -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg (Hz): "
        app:layout_constraintBottom_toBottomOf="@id/snareDrumImage"
        app:layout_constraintStart_toStartOf="@id/snareDrumImage" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg (Hz): "
        app:layout_constraintTop_toTopOf="@id/snareDrumImage"
        app:layout_constraintStart_toStartOf="@id/snareDrumImage" />

    <Button
        android:id="@+id/captureSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0000FF"
        android:fontFamily="@font/lilita_one_regular"
        android:text="Capture Section"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/nxtSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snareDrumImage"
        app:layout_constraintVertical_bias="0.754" />

    <Button
        android:id="@+id/nxtSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#0000FF"
        android:fontFamily="@font/lilita_one_regular"
        android:text="Next Section"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
